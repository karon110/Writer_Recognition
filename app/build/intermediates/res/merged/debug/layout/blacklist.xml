<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:background="@drawable/backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btnfromPhone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="从手机中选取照片"
            android:textColor="#ffffff"
            android:background="@drawable/bt_circle"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:onClick="SelectPicFromPhone"
            />

        <Button
            android:id="@+id/btnfromdatabase"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="从数据库中选取照片"
            android:textColor="#ffffff"
            android:background="@drawable/bt_circle"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:onClick="SelectPicFromDataBase"
            />

        <Button
            android:id="@+id/downloadPic"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="从数据库显示照片"
            android:textColor="#ffffff"
            android:background="@drawable/bt_circle"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:onClick="dloadpic"
            />
        <ImageView
            android:id="@+id/dpic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#ffffffff"/>
    </LinearLayout>

    <include
        layout="@layout/lastitem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
</LinearLayout>
